@model IEnumerable<(AttendanceSystemMVC.Models.ApplicationUser User, System.Collections.Generic.IList<string> Roles)>

@{
    ViewData["Title"] = "Users Management";
}

<div class="container mt-4">
    <h2><i class="fas fa-users"></i> Users Management</h2>
    <hr />

    <div class="mb-3">
        <a class="btn btn-primary" asp-action="CreateUser">
            <i class="fas fa-user-plus"></i> Create New User
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th><i class="fas fa-envelope"></i> Email</th>
                        <th><i class="fas fa-user"></i> Full Name</th>
                        <th><i class="fas fa-user-tag"></i> Roles</th>
                        <th><i class="fas fa-check-circle"></i> Approved</th>
                        <th><i class="fas fa-lock"></i> Must Change Password</th>
                        <th><i class="fas fa-cogs"></i> Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var userWithRoles in Model)
                    {
                        <tr>
                            <td>@userWithRoles.User.Email</td>
                            <td>@userWithRoles.User.FullName</td>
                            <td>
                                @if (userWithRoles.Roles.Any())
                                {
                                    @foreach (var role in userWithRoles.Roles)
                                    {
                                        <span class="badge bg-primary text-white me-1">@role</span>
                                    }
                                }
                                else
                                {
                                    <span class="badge bg-secondary text-white">No Roles</span>
                                }
                            </td>
                            <td>
                                @if (userWithRoles.User.IsApproved)
                                {
                                    <span class="badge bg-success text-white">Yes</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">No</span>
                                }
                            </td>
                            <td>
                                @if (userWithRoles.User.MustChangePassword)
                                {
                                    <span class="badge bg-warning text-dark">Yes</span>
                                }
                                else
                                {
                                    <span class="badge bg-success text-white">No</span>
                                }
                            </td>
                            <td>
                                <a class="btn btn-sm btn-warning" asp-action="EditUser" asp-route-id="@userWithRoles.User.Id">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a class="btn btn-sm btn-danger" asp-action="DeleteUser" asp-route-id="@userWithRoles.User.Id" onclick="return confirm('Are you sure you want to delete this user?')">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> No users found. Create a new user to get started.
        </div>
    }
</div>