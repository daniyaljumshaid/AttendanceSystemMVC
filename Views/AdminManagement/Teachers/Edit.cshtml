@model AttendanceSystemMVC.Models.TeacherProfile

@{
    ViewData["Title"] = "Edit Teacher";
}

<h2>Edit Teacher</h2>
<form asp-action="EditTeacher" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <div class="mb-3">
        <label>Full Name</label>
        <input name="fullName" value="@Model.ApplicationUser?.FullName" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Employee ID</label>
        <input name="employeeId" value="@Model.EmployeeId" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>