@model IEnumerable<AttendanceSystemMVC.Models.TeacherProfile>
@{
    ViewData["Title"] = "Teachers Management";
}

<div class="container mt-4">
    <h2>Teachers Management</h2>
    <hr />

    <div class="mb-3">
        <a asp-action="CreateTeacher" class="btn btn-primary">+ Create New Teacher</a>
        <a asp-action="Index" class="btn btn-secondary">? Back to Dashboard</a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            No teachers found. Create a new teacher to get started.
        </div>
    }
    else
    {
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Employee ID</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var teacher in Model)
                {
                    <tr>
                        <td>@teacher.Id</td>
                        <td>@(teacher.EmployeeId ?? "N/A")</td>
                        <td>@(teacher.ApplicationUser?.FullName ?? "N/A")</td>
                        <td>@(teacher.ApplicationUser?.Email ?? "N/A")</td>
                        <td>
                            <a asp-action="EditTeacher" asp-route-id="@teacher.Id" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-action="DeleteTeacher" asp-route-id="@teacher.Id" 
                               class="btn btn-sm btn-danger" 
                               onclick="return confirm('Are you sure you want to delete this teacher?')">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>