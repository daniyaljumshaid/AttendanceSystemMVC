@model AttendanceSystemMVC.Models.StudentProfile
@{
    ViewData["Title"] = "Edit Student";
    var sections = ViewBag.Sections as List<AttendanceSystemMVC.Models.Section> ?? new List<AttendanceSystemMVC.Models.Section>();
}

<div class="container mt-4">
    <h2>Edit Student</h2>
    <hr />

    <form asp-action="EditStudent" asp-route-id="@Model.Id" method="post">
        <div class="form-group">
            <label>Full Name</label>
            <input type="text" name="fullName" value="@Model.FullName" class="form-control" required />
        </div>

        <div class="form-group">
            <label>Roll Number</label>
            <input type="number" name="rollNumber" value="@Model.RollNumber" class="form-control" required />
        </div>

        <div class="form-group">
            <label>Section</label>
            <select name="sectionId" class="form-control" required>
                <option value="">-- Select Section --</option>
                @foreach(var s in sections)
                {
                    <option value="@s.Id" selected="@(s.Id == Model.SectionId)">@s.Name</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label>Email</label>
            <input type="text" value="@Model.ApplicationUser?.Email" class="form-control" readonly disabled />
            <small class="form-text text-muted">Email cannot be changed</small>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger mt-3">@ViewBag.Error</div>
        }

        <div class="form-group mt-3">
            <button type="submit" class="btn btn-success">Save Changes</button>
            <a asp-action="Students" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
