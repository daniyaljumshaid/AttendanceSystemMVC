@model IEnumerable<AttendanceSystemMVC.Models.CourseSchedule>

@{
    ViewData["Title"] = "Course Schedules";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-clock"></i> Course Schedules</h2>
        <a class="btn btn-primary" asp-action="CreateCourseSchedule">
            <i class="fas fa-plus"></i> Create Schedule
        </a>
    </div>
    
    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th><i class="fas fa-book"></i> Course</th>
                        <th><i class="fas fa-chalkboard-teacher"></i> Teacher</th>
                        <th><i class="fas fa-layer-group"></i> Section</th>
                        <th><i class="fas fa-calendar-day"></i> Day</th>
                        <th><i class="fas fa-clock"></i> Start Time</th>
                        <th><i class="fas fa-clock"></i> End Time</th>
                        <th><i class="fas fa-cogs"></i> Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var cs in Model)
                    {
                        <tr>
                            <td>
                                <strong>@(cs.Course?.Name ?? "Unknown")</strong>
                                <br />
                                <small class="text-muted">@(cs.Course?.Code ?? "N/A")</small>
                            </td>
                            <td>
                                <strong>@(cs.Teacher?.ApplicationUser?.FullName ?? "Unknown")</strong>
                                <br />
                                <small class="text-muted">ID: @(cs.Teacher?.EmployeeId ?? "N/A")</small>
                            </td>
                            <td>@(cs.Section?.Name ?? "Unknown")</td>
                            <td>
                                <span class="badge badge-info">@cs.DayOfWeek</span>
                            </td>
                            <td>
                                <i class="fas fa-play text-success"></i> @cs.StartTime.ToString(@"hh\:mm")
                            </td>
                            <td>
                                <i class="fas fa-stop text-danger"></i> @cs.EndTime.ToString(@"hh\:mm")
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a class="btn btn-sm btn-warning" asp-action="EditCourseSchedule" asp-route-id="@cs.Id">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <a class="btn btn-sm btn-danger" 
                                       asp-action="DeleteCourseSchedule" 
                                       asp-route-id="@cs.Id" 
                                       onclick="return confirm('Are you sure you want to delete this schedule?')">
                                        <i class="fas fa-trash"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> No course schedules found. 
            <a asp-action="CreateCourseSchedule" class="alert-link">Create the first schedule</a>.
        </div>
    }
    
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
    </div>
</div>