@model AttendanceSystemMVC.Models.Session

@{
    ViewData["Title"] = "Create Session";
}

<h2>Create Session</h2>
<form asp-action="CreateSession" method="post">
    <div class="mb-3">
        <label>Name</label>
        <input name="Name" value="@Model?.Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label>Start Date</label>
        <input name="StartDate" type="date" value="@Model?.StartDate.ToString("yyyy-MM-dd")" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label>End Date</label>
        <input name="EndDate" type="date" value="@Model?.EndDate.ToString("yyyy-MM-dd")" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}