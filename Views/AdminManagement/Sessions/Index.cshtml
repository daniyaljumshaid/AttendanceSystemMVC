@model IEnumerable<AttendanceSystemMVC.Models.Session>
@{
    ViewData["Title"] = "Sessions Management";
}

<div class="container mt-4">
    <h2>Sessions Management</h2>
    <hr />

    <div class="mb-3">
        <a asp-action="CreateSession" class="btn btn-primary">+ Create New Session</a>
        <a asp-action="Index" class="btn btn-secondary">? Back to Dashboard</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Session Name</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.StartDate.ToShortDateString()</td>
                        <td>@item.EndDate.ToShortDateString()</td>
                        <td>
                            <a asp-action="EditSession" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-action="DeleteSession" asp-route-id="@item.Id" 
                               class="btn btn-sm btn-danger" 
                               onclick="return confirm('Are you sure you want to delete this item?')">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">No sessions found. Create a new session to get started.</td>
                </tr>
            }
        </tbody>
    </table>
</div>