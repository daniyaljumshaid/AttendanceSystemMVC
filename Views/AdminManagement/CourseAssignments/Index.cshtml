@model IEnumerable<AttendanceSystemMVC.Models.CourseAssignment>

@{
    ViewData["Title"] = "Course Assignments";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-user-tie"></i> Course Assignments</h2>
        <a class="btn btn-primary" asp-action="AssignTeacher">
            <i class="fas fa-plus"></i> Assign Teacher
        </a>
    </div>
    
    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th><i class="fas fa-chalkboard-teacher"></i> Teacher</th>
                        <th><i class="fas fa-book"></i> Course</th>
                        <th><i class="fas fa-calendar-alt"></i> Session</th>
                        <th><i class="fas fa-layer-group"></i> Section</th>
                        <th><i class="fas fa-cogs"></i> Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var ca in Model)
                    {
                        <tr>
                            <td>
                                <strong>@(ca.Teacher?.ApplicationUser?.FullName ?? "Unknown")</strong>
                                <br />
                                <small class="text-muted">ID: @(ca.Teacher?.EmployeeId ?? "N/A")</small>
                            </td>
                            <td>
                                <strong>@(ca.Course?.Name ?? "Unknown")</strong>
                                <br />
                                <small class="text-muted">@(ca.Course?.Code ?? "N/A")</small>
                            </td>
                            <td>@(ca.Session?.Name ?? "Unknown")</td>
                            <td>@(ca.Section?.Name ?? "Unknown")</td>
                            <td>
                                <a class="btn btn-sm btn-danger" 
                                   asp-action="DeleteCourseAssignment" 
                                   asp-route-id="@ca.Id" 
                                   onclick="return confirm('Are you sure you want to delete this assignment?')">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> No course assignments found. 
            <a asp-action="AssignTeacher" class="alert-link">Create the first assignment</a>.
        </div>
    }
    
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
    </div>
</div>