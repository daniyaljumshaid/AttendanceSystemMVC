@model IEnumerable<AttendanceSystemMVC.Models.Section>
@{
    ViewData["Title"] = "Sections Management";
}

<div class="container mt-4">
    <h2>Sections Management</h2>
    <hr />

    <div class="mb-3">
        <a asp-action="CreateSection" class="btn btn-primary">+ Create New Section</a>
        <a asp-action="Index" class="btn btn-secondary">? Back to Dashboard</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Section Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>
                            <a asp-action="EditSection" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-action="DeleteSection" asp-route-id="@item.Id" 
                               class="btn btn-sm btn-danger" 
                               onclick="return confirm('Are you sure you want to delete this section?')">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center">No sections found. Create a new section to get started.</td>
                </tr>
            }
        </tbody>
    </table>
</div>