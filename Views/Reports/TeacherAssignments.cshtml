@model IEnumerable<AttendanceSystemMVC.Models.CourseAssignment>
@{
    ViewData["Title"] = "Teacher Assignments Report";
}

<div class="container mt-4">
    <h2><i class="fas fa-chalkboard-teacher"></i> Teacher Assignments Report</h2>
    <hr />

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Teacher</th>
                        <th>Employee ID</th>
                        <th>Course</th>
                        <th>Section</th>
                        <th>Session</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var assignment in Model)
                    {
                        <tr>
                            <td>
                                <strong>@(assignment.Teacher?.ApplicationUser?.FullName ?? "Unknown")</strong><br />
                                <small class="text-muted">@(assignment.Teacher?.ApplicationUser?.Email ?? "N/A")</small>
                            </td>
                            <td>@(assignment.Teacher?.EmployeeId ?? "N/A")</td>
                            <td>
                                <strong>@(assignment.Course?.Name ?? "Unknown")</strong><br />
                                <small class="text-muted">Code: @(assignment.Course?.Code ?? "N/A")</small>
                            </td>
                            <td>@(assignment.Section?.Name ?? "Unknown")</td>
                            <td>@(assignment.Session?.Name ?? "Unknown")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> No teacher assignments found.
        </div>
    }

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to Reports</a>
        <a asp-controller="AdminManagement" asp-action="CourseAssignments" class="btn btn-primary"><i class="fas fa-cogs"></i> Manage Assignments</a>
    </div>
</div>