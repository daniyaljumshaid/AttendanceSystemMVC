@{
    ViewData["Title"] = "System Analytics";
}

<div class="container mt-4">
    <h2><i class="fas fa-chart-pie"></i> System Analytics</h2>
    <hr />

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Enrollments by Section</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.EnrollmentsBySection != null && ((System.Collections.IEnumerable)ViewBag.EnrollmentsBySection).Cast<object>().Any())
                    {
                        <table class="table table-sm table-hover">
                            <thead>
                                <tr>
                                    <th>Section</th>
                                    <th class="text-end">Enrollments</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.EnrollmentsBySection)
                                {
                                    <tr>
                                        <td>@item.Section</td>
                                        <td class="text-end"><span class="badge bg-primary">@item.Count</span></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-info" role="alert">
                            <i class="fas fa-info-circle"></i> No enrollment data available yet. 
                            <br><small>Please add student enrollments to see statistics.</small>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Enrollments by Course</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.EnrollmentsByCourse != null && ((System.Collections.IEnumerable)ViewBag.EnrollmentsByCourse).Cast<object>().Any())
                    {
                        <table class="table table-sm table-hover">
                            <thead>
                                <tr>
                                    <th>Course</th>
                                    <th class="text-end">Enrollments</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.EnrollmentsByCourse)
                                {
                                    <tr>
                                        <td>@item.Course</td>
                                        <td class="text-end"><span class="badge bg-success">@item.Count</span></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-info" role="alert">
                            <i class="fas fa-info-circle"></i> No enrollment data available yet. 
                            <br><small>Please add student enrollments to see statistics.</small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to Reports</a>
        <a asp-controller="AdminManagement" asp-action="Index" class="btn btn-primary"><i class="fas fa-home"></i> Admin Dashboard</a>
    </div>
</div>