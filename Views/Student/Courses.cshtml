@model IEnumerable<AttendanceSystemMVC.Models.Course>

@{
    ViewData["Title"] = "My Courses";
}

<div class="container mt-5">
    <h2>My Courses</h2>
    <hr />

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            You are not enrolled in any courses yet. Please contact your administrator.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Course Code</th>
                        <th>Course Title</th>
                        <th>Credit Hours</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var course in Model)
                    {
                        <tr>
                            <td><strong>@course.Code</strong></td>
                            <td>@course.Title</td>
                            <td><span class="badge bg-info">@course.CreditHours</span></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <a href="@Url.Action("Index", "Student")" class="btn btn-secondary mt-3">Back to Dashboard</a>
</div>
