@model IEnumerable<AttendanceSystemMVC.Models.CourseSchedule>

@{
    ViewData["Title"] = "My Timetable";
}

<h2>My Timetable</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">No timetable available.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr><th>Day</th><th>Course</th><th>Section</th><th>Start</th><th>End</th></tr>
        </thead>
        <tbody>
            @foreach(var cs in Model)
            {
                <tr>
                    <td>@cs.DayOfWeek</td>
                    <td>@(cs.Course?.Name ?? cs.Course?.Title)</td>
                    <td>@cs.Section?.Name</td>
                    <td>@cs.StartTime.ToString(@"hh\:mm")</td>
                    <td>@cs.EndTime.ToString(@"hh\:mm")</td>
                </tr>
            }
        </tbody>
    </table>
}

<a href="@Url.Action("Index","Student")" class="btn btn-secondary">Back</a>