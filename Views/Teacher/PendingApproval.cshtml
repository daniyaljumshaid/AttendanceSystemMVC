@{
    ViewData["Title"] = "Account Pending Approval";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-warning">
                <div class="card-header bg-warning text-dark text-center">
                    <h4 class="mb-0">
                        <i class="fas fa-hourglass-half"></i> Account Pending Approval
                    </h4>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-user-clock fa-4x text-warning"></i>
                    </div>
                    <h5 class="card-title">Welcome to the Attendance System!</h5>
                    <p class="card-text">
                        @ViewBag.Message
                    </p>
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i>
                        <strong>What happens next?</strong>
                        <ul class="list-unstyled mt-2 mb-0">
                            <li>• Your registration has been submitted successfully</li>
                            <li>• An administrator will review your application</li>
                            <li>• You will receive access once approved</li>
                            <li>• Please check back later or contact support</li>
                        </ul>
                    </div>
                    <div class="mt-4">
                        <a asp-controller="Account" asp-action="Logout" class="btn btn-secondary me-2">
                            <i class="fas fa-sign-out-alt"></i> Logout
                        </a>
                        <button class="btn btn-primary" onclick="window.location.reload()">
                            <i class="fas fa-sync-alt"></i> Refresh Status
                        </button>
                    </div>
                </div>
                <div class="card-footer text-center text-muted">
                    <small>
                        <i class="fas fa-envelope"></i> Need help? Contact: admin@school.local
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Auto-refresh every 30 seconds to check approval status
setInterval(() => {
    window.location.reload();
}, 30000);
</script>