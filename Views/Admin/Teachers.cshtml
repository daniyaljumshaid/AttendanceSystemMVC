@model IEnumerable<AttendanceSystemMVC.ViewModels.TeacherViewModel>

<div class="container mt-5">
    <h2>Manage Teachers</h2>
    <hr />

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No teachers registered yet.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Full Name</th>
                        <th>Employee ID</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in Model)
                    {
                        <tr>
                            <td>@t.FullName</td>
                            <td><span class="badge bg-info">@(t.EmployeeId ?? "N/A")</span></td>
                            <td>
                                <button class="btn btn-sm btn-info" disabled>View Details</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary mt-3">Back to Dashboard</a>
</div>
