@model AttendanceSystemMVC.ViewModels.CourseViewModel
@{
    ViewBag.Title = "Create Course";
}

<div class="container mt-5">
    <h2>Create New Course</h2>
    <hr />

    <form asp-action="CreateCourse" method="post">
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Course Name</label>
            <input asp-for="Name" class="form-control" placeholder="e.g., Object Oriented Programming" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Code" class="form-label">Course Code (numeric)</label>
            <input asp-for="Code" type="number" class="form-control" placeholder="e.g., 201" required />
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Title" class="form-label">Course Title</label>
            <input asp-for="Title" class="form-control" placeholder="Short title" required />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CreditHours" class="form-label">Credit Hours</label>
            <input asp-for="CreditHours" type="number" class="form-control" placeholder="3" required />
            <span asp-validation-for="CreditHours" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Create Course</button>
            <a href="@Url.Action("Courses", "Admin")" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
