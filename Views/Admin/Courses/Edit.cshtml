@model AttendanceSystemMVC.ViewModels.CourseViewModel
@{
    ViewBag.Title = "Edit Course";
}

<div class="container mt-5">
    <h2>Edit Course</h2>
    <hr />

    <form asp-action="EditCourse" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Course Name</label>
            <input asp-for="Name" class="form-control" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Code" class="form-label">Course Code (numeric)</label>
            <input asp-for="Code" type="number" class="form-control" required />
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Title" class="form-label">Course Title</label>
            <input asp-for="Title" class="form-control" required />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CreditHours" class="form-label">Credit Hours</label>
            <input asp-for="CreditHours" type="number" class="form-control" required />
            <span asp-validation-for="CreditHours" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a href="@Url.Action("Courses", "Admin")" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
