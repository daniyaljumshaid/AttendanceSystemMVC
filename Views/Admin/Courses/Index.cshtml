@model IEnumerable<AttendanceSystemMVC.Models.Course>

@{
    ViewBag.Title = "Courses";
}

<div class="container mt-5">
    <h2>Manage Courses</h2>
    <hr />

    <a class="btn btn-primary mb-3" asp-action="CreateCourse">
        <i class="bi bi-plus-circle"></i> Add New Course
    </a>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No courses available yet. Click the button above to add a new course.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Code</th>
                        <th>Title</th>
                        <th>Credit Hours</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model)
                    {
                        <tr>
                            <td>@(c.Name ?? c.Title)</td>
                            <td><strong>@c.Code</strong></td>
                            <td>@c.Title</td>
                            <td><span class="badge bg-primary">@c.CreditHours</span></td>
                            <td>
                                <a class="btn btn-sm btn-warning" asp-action="EditCourse" asp-route-id="@c.Id">Edit</a>
                                <a class="btn btn-sm btn-danger" asp-action="DeleteCourse" asp-route-id="@c.Id" onclick="return confirm('Are you sure?')">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary mt-3">Back to Dashboard</a>
</div>